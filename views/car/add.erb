<div class="pure-u-1">
  <form class="pure-form pure-form-stacked" action="/car/add" method="post">
    <fieldset>
      <legend>Add new car</legend>

      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-1-3">
          <label for="make">Make</label>
          <input id="make" type="text" name="make">
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="model">Model</label>
          <input id="model" type="text" name="model"/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="motor">Motor</label>
          <input id="motor" type="text" name="motor"/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="km">Km</label>
          <input id="km" type="number" name="km"/><br/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="year">Year</label>
          <input id="year" type="number" name="year"/><br/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="energy">Energy</label>
          <select id="energy" name="energy">
            <option>Diesel</option>
            <option>Petrol</option>
          </select>
        </div>
        <div class="pure-u-1">
          <input class="pure-button pure-button-primary" type="submit" value="Submit"/>
        </div>

      </div>

    </fieldset>
  </form>
</div>
