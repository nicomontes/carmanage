<div class="pure-u-1">
  <form class="pure-form pure-form-stacked" action="/repair/add/<%=@carID%>" method="post">
    <fieldset>
      <legend>Add new repair</legend>

      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-1-3">
          <label for="km">KM</label>
          <input id="km" type="number" name="km"/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="price">Price</label>
          <input id="price" type="number" name="price" min="0" max="20000" step="any"/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="date">Date</label>
          <input id="date" type="date" name="date" autocomplete="on"/><br/>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
          <label for="comment">Comment</label>
          <textarea id="comment" name="comment"></textarea><br/>
        </div>
        <div class="pure-u-1">
          <input class="pure-button pure-button-primary" type="submit" value="Submit"/>
        </div>

      </div>

    </fieldset>
  </form>
</div>
