<div class="pure-u-1">
  <form class="pure-form pure-form-stacked" action="/refuel/add/<%=@carID%>" method="post">
    <fieldset>
      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-1-3">
          <label for="km">KM</label>
          <input id="km" type="number" name="km"/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="liter">Liter</label>
          <input id="liter" type="nuber" name="liter">
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="price">Price/Liter</label>
          <input id="price" type="number" name="price" min="0" max="3" step="any"/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="station">Station</label>
          <input id="station" type="text" name="station"/><br/>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="date">Date</label>
          <input id="date" type="date" name="date" autocomplete="on"/><br/>
        </div>
        <div class="pure-u-1">
          <input class="pure-button pure-button-primary" type="submit" value="Submit"/>
        </div>

      </div>

    </fieldset>
  </form>
</div>
