<div class="pure-u-1">

  <h2>Refuel List</h2>

  <table class="pure-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>KM</th>
        <th>Liters</th>
        <th>Station</th>
        <th>Price</th>
        <th>L/100KM</th>
        <th>â‚¬/100KM</th>
      </tr>
    </thead>

    <tbody>

<%
  i = 0
  if @refuel.nil?
    %><h3>No refueling<h3><%
  else
      while @refuel[i] do %>
        <tr>
          <td><%=@refuel[i]['date']%></td>
          <td><%=@refuel[i]['km']%></td>
          <td><%=@refuel[i]['liter']%></td>
          <td><%=@refuel[i]['station']%></td>
          <td><%=@refuel[i]['price']%></td>
          <%
            @use = @refuel[i]['liter'].to_f / (@refuel[i]['km'].to_f / 100)
            @price = @use * @refuel[i]['price'].to_f
          %>

          <td><%=@use.to_s[/[0-9]*\.[0-9]{0,2}/]%></td>
          <td><%=@price.to_s[/[0-9]*\.[0-9]{2}/]%></td>
      </tr>
      <%i += 1
    end
  end
%>

    </tbody>
  </table>
</div>
